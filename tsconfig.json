{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "target": "es2019",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "es2019",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "useDefineForClassFields": false,
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ]
    }
}